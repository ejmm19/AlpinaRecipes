<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="alpina_recipe" resource="default" engine="innodb" comment="Alpina Recipe Table">
        <column xsi:type="int" name="recipe_id" unsigned="true" nullable="false" identity="true" comment="Recipe ID"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Recipe Title"/>
        <column xsi:type="text" name="content" nullable="true" comment="Recipe Content"/>
        <column xsi:type="smallint" name="is_active" unsigned="true" nullable="false" default="1" comment="Is Active"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="recipe_id"/>
        </constraint>
        <index referenceId="ALPINA_RECIPE_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
    </table>
    
    <table name="alpina_article" resource="default" engine="innodb" comment="Alpina Article Table">
        <column xsi:type="int" name="article_id" unsigned="true" nullable="false" identity="true" comment="Article ID"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Article Title"/>
        <column xsi:type="text" name="content" nullable="true" comment="Article Content"/>
        <column xsi:type="smallint" name="is_active" unsigned="true" nullable="false" default="1" comment="Is Active"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="article_id"/>
        </constraint>
        <index referenceId="ALPINA_ARTICLE_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
    </table>
</config>
