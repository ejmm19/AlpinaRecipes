<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="alpina_recipe" resource="default" engine="innodb" comment="Alpina Recipe Table">
        <column xsi:type="int" name="recipe_id" unsigned="true" nullable="false" identity="true" comment="Recipe ID"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Recipe Title"/>
        <column xsi:type="varchar" name="url_key" nullable="false" length="255" comment="URL Key"/>
        <column xsi:type="text" name="short_description" nullable="true" comment="Short Description"/>
        <column xsi:type="text" name="description" nullable="true" comment="Full Description"/>
        <column xsi:type="text" name="ingredients" nullable="true" comment="Ingredients List"/>
        <column xsi:type="text" name="instructions" nullable="true" comment="Cooking Instructions"/>
        <column xsi:type="varchar" name="image" nullable="true" length="255" comment="Recipe Main Image"/>
        <column xsi:type="varchar" name="featured_product" nullable="true" length="255" comment="Featured Alpina Product"/>
        <column xsi:type="int" name="preparation_time" unsigned="true" nullable="true" comment="Preparation Time"/>
        <column xsi:type="int" name="cooking_time" unsigned="true" nullable="true" comment="Cooking Time"/>
        <column xsi:type="int" name="servings" unsigned="true" nullable="true" comment="Number of Servings"/>
        <column xsi:type="varchar" name="difficulty_level" nullable="true" length="50" comment="Difficulty Level"/>
        <column xsi:type="varchar" name="category" nullable="true" length="100" comment="Recipe Category"/>
        <column xsi:type="text" name="nutrition_info" nullable="true" comment="Nutritional Information"/>
        <column xsi:type="varchar" name="video_url" nullable="true" length="255" comment="Video Tutorial URL"/>
        <column xsi:type="text" name="tags" nullable="true" comment="Recipe Tags"/>
        <column xsi:type="smallint" name="is_active" unsigned="true" nullable="false" default="1" comment="Is Active"/>
        <column xsi:type="smallint" name="featured" unsigned="true" nullable="false" default="0" comment="Is Featured"/>
        <column xsi:type="int" name="sort_order" unsigned="true" nullable="true" default="0" comment="Sort Order"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="recipe_id"/>
        </constraint>
        <index referenceId="ALPINA_RECIPE_URL_KEY" indexType="btree">
            <column name="url_key"/>
        </index>
        <index referenceId="ALPINA_RECIPE_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
        <index referenceId="ALPINA_RECIPE_FEATURED" indexType="btree">
            <column name="featured"/>
        </index>
    </table>
</config>
