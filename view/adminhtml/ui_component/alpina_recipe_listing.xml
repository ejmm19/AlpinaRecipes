<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">alpina_recipe_listing.alpina_recipe_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Add New Recipe</label>
            </button>
        </buttons>
        <spinner>alpina_recipe_columns</spinner>
        <deps>
            <dep>alpina_recipe_listing.alpina_recipe_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="alpina_recipe_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">recipe_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Alpina_RecipesAndArticles::recipes</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="alpina_recipe_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>recipe_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters"/>
        <massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete selected recipes?</message>
                        <title translate="true">Delete recipes</title>
                    </confirm>
                    <url path="alpina_recipes/recipe/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
            <action name="enable">
                <settings>
                    <url path="alpina_recipes/recipe/massStatus">
                        <param name="status">1</param>
                    </url>
                    <type>enable</type>
                    <label translate="true">Enable</label>
                </settings>
            </action>
            <action name="disable">
                <settings>
                    <url path="alpina_recipes/recipe/massStatus">
                        <param name="status">0</param>
                    </url>
                    <type>disable</type>
                    <label translate="true">Disable</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="alpina_recipe_columns">
        <selectionsColumn name="ids">
            <settings>
                <indexField>recipe_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="recipe_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="title">
            <settings>
                <filter>text</filter>
                <label translate="true">Title</label>
            </settings>
        </column>
        <column name="is_active" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Status</label>
            </settings>
        </column>
        <column name="created_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Created</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Alpina\RecipesAndArticles\Ui\Component\Listing\Column\RecipeActions">
            <settings>
                <indexField>recipe_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
